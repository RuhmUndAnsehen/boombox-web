<% title_tag! @currency.currency %>

<%= show @currency, associations: :countries do |s| %>
  <%= s.attribute 'currency' do |s| %>
    <% s.content_tag :h1, s.value %>
  <% end %>

  <%= s.content_tag_if_name s.attribute_list_tag_name,
                            class: 'model-attributes-list' do |s| %>
    <%= s.attribute except: 'currency' %>
    <%= s.association :countries %>
  <% end %>
<% end %>
