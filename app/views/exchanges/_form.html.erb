<%= form_with(model: [@country, exchange]) do |form| %>
  <% if exchange.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(exchange.errors.count, "error") %> prohibited this exchange from being saved:</h2>

      <ul>
        <% exchange.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <span><%= exchange.t :country_id %></span>
    <span><%= exchange.country.to_human_s %></span>
    <%= form.hidden_field :country_id %>
  </div>

  <div>
    <%= form.label :symbol, style: "display: block" %>
    <%= form.text_field :symbol %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :timezone %>
    <%= form.text_field :timezone %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
