<%= show exchange, associations: :country,
                   attributes: %i[name symbol timezone],
                   link: :name do |s| %>
  <%= s.content_tag s.attribute_list_tag_name,
                    class: 'model-attributes-list' do |s| %>
    <%= s.attribute %i[name symbol] %>
    <%= s.association :country do |s| %>
      <%= s.name_tag s.name %>
      <%= s.values_tag link_to(s.value.alpha3_code, s.value) %>
    <% end %>
    <%= s.attribute :timezone %>
  <% end %>
<% end %>
